#! /usr/bin/env perl

use strict;
use warnings;

use Artemis::Reports::API::Daemon;

$ENV{MX_DAEMON_STDOUT} ||= '/tmp/artemis_reports_api_daemon_devel_stdout.log';
$ENV{MX_DAEMON_STDERR} ||= '/tmp/artemis_reports_api_daemon_devel_stderr.log';

my $api = new Artemis::Reports::API::Daemon
    (
     pidfile => '/tmp/artemis-reports-api-daemon.pid'
    );
$api->run;
